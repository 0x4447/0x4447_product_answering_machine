				},
				"TargetAction": "Material",
				"TargetPipelineVersion": {
					"Fn::GetAtt": [
						"CodePipelineLambdaMessage",
						"Version"
					]
				},
				"RegisterWithThirdParty": true
			}
		},
		"CodeBuildLambdaMessage": {
			"Type": "AWS::CodeBuild::Project",
			"Properties": {
				"Name": "0x4447_answering_machine_lambda_message",
				"ServiceRole": {
					"Fn::GetAtt": [
						"CodeBuildLambdaMessageRole",
						"Arn"
					]
				},
				"TimeoutInMinutes": 60,
				"Source": {
					"Type": "CODEPIPELINE",
					"BuildSpec": "buildspec.yml"
				},
				"Artifacts": {
					"Type": "CODEPIPELINE"
				},
				"Environment": {
					"Type": "LINUX_CONTAINER",
					"ComputeType": "BUILD_GENERAL1_SMALL",
					"Image": "aws/codebuild/nodejs:8.11.0",
					"EnvironmentVariables": [
						{
							"Name": "FUNCTION_NAME",
							"Type": "PLAINTEXT",
							"Value": {
								"Ref": "LambdaMessage"
							}
						}
					]
				}
			}
		},
		"CodeBuildLambdaMessageRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"RoleName": "0x4447_answering_machine_message-codebuild",
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": "codebuild.amazonaws.com"
							},
							"Action": "sts:AssumeRole"
						}
					]
				}
			}
		},

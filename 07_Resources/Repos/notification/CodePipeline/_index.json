{
	"CodePipelineLambdaNotification": {
		"Type": "AWS::CodePipeline::Pipeline",
		"Properties": {
			"Name": "0x4447-answering-machine-notification",
			"ArtifactStore": {
				"Location": { "Ref": "CodePipelineBucketName" },
				"Type": "S3"
			},
			"RoleArn": { "Fn::GetAtt": ["PipelineLambdaNotificationRole", "Arn"] },
			"Stages": [
				{
					"Name": "Get",
					"Actions": [
						{
							"Name": "Material",
							"RunOrder": 1,
							"ActionTypeId": {
								"Category": "Source",
								"Owner": "ThirdParty",
								"Provider": "GitHub",
								"Version": "1"
							},
							"Configuration": {
								"Owner": "0x4447",
								"Repo": "0x4447_product_answering_machine_notification",
								"Branch": { "Ref": "ParamStage" },
								"PollForSourceChanges": false,
								"OAuthToken": { "Ref": "ParamGitHubToken" }
							},
							"OutputArtifacts": [
								{
									"Name": "source_code"
								}
							]
						}
					]
				},
				{
					"Name": "Cast",
					"Actions": [
						{
							"Name": "Mold",
							"RunOrder": 1,
							"InputArtifacts": [
								{
									"Name": "source_code"
								}
							],
							"Configuration": {
								"ProjectName": { "Ref": "CodeBuildLambdaNotification" }
							},
							"ActionTypeId": {
								"Category": "Build",
								"Owner": "AWS",
								"Provider": "CodeBuild",
								"Version": "1"
							}
						}
					]
				}
			]
		}
	}
}